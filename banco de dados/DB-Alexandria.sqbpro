    Id_Genero INTEGER PRIMARY KEY NOT NULL,
    Nome_Genero TEXT NOT NULL,
    Descricao_Genero TEXT NOT NULL
);

CREATE TABLE Cadastro_Clientes (
    Id_Cliente INTEGER PRIMARY KEY NOT NULL,
    Nome_Cliente TEXT NOT NULL,
    Email_Cliente TEXT NOT NULL UNIQUE,
    Username_Cliente TEXT NOT NULL UNIQUE,
    Senha_Cliente TEXT NOT NULL,
    Cidade_Cliente TEXT NOT NULL,
    Estado_Cliente TEXT NOT NULL,
    Pais_Cliente TEXT NOT NULL,
    Foto_Cliente BLOB,
    Telefone_Cliente TEXT NOT NULL,
    Genero_Cliente TEXT NOT NULL
);

CREATE TABLE Cadastro_Livros (
    Id_Livro INTEGER PRIMARY KEY NOT NULL,
    Nome_Livro TEXT NOT NULL,
    Autor_Livro TEXT NOT NULL,
    ISBN_Livro TEXT NOT NULL UNIQUE,
    Id_Genero INTEGER NOT NULL,
    Descricao_Livro TEXT NOT NULL,
    Foto_Capa BLOB NOT NULL,
    FOREIGN KEY (Id_Genero) REFERENCES Cadastro_GeneroLivro(Id_Genero)
);

CREATE TABLE Instancia_Livros (
    Id_Instancia INTEGER PRIMARY KEY NOT NULL,
    Id_Livro INTEGER NOT NULL,
    Id_Cliente INTEGER NOT NULL,
    Data_Cadastro_Instancia TEXT NOT NULL, 
    Id_Genero INTEGER NOT NULL,
    Status_Instancia TEXT NOT NULL,
    FOREIGN KEY (Id_Livro) REFERENCES Cadastro_Livros(Id_Livro),
    FOREIGN KEY (Id_Cliente) REFERENCES Cadastro_Clientes(Id_Cliente),
    FOREIGN KEY (Id_Genero) REFERENCES Cadastro_GeneroLivro(Id_Genero)
);

CREATE TABLE Amigos (
    Id_Amizade INTEGER PRIMARY KEY NOT NULL,
    Id_Cliente_Solicitante INTEGER NOT NULL,
    Id_Cliente_Solicitado INTEGER NOT NULL,
    Data_Solicitacao TEXT NOT NULL,
    Status_Amizade TEXT NOT NULL,
    FOREIGN KEY (Id_Cliente_Solicitante) REFERENCES Cadastro_Clientes(Id_Cliente),
    FOREIGN KEY (Id_Cliente_Solicitado) REFERENCES Cadastro_Clientes(Id_Cliente)
);

CREATE TABLE Transacoes (
    Id_Transacao INTEGER PRIMARY KEY NOT NULL,
    Id_Instancia_Livro1 INTEGER NOT NULL,
    Id_Instancia_Livro2 INTEGER NOT NULL,
    Data_Transacao TEXT NOT NULL, 
    Status_Transacao TEXT NOT NULL,
    FOREIGN KEY (Id_Instancia_Livro1) REFERENCES Instancia_Livros(Id_Instancia),
    FOREIGN KEY (Id_Instancia_Livro2) REFERENCES Instancia_Livros(Id_Instancia)
);</sql><current_tab id="0"/></tab_sql></sqlb_project>
